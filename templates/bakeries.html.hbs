{{#*inline "page"}}

  <h3>Bakeries</h3>
  <form action="/api/bakery" method="post">
      <div class="form-group">
          <label for="exampleInputPassword1">Name</label>
          <input type="text" name="name" class="form-control" placeholder="Name">
      </div>
      <div class="form-group">
          <label for="exampleInputPassword1">Profit Margin</label>
          <input type="text" name="profit_margin" class="form-control" placeholder="Profit Margin">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <table class="table-bordered table-striped">
      <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Profit Margin</th>
        </tr>
      </thead>
      <tbody>
        {{#each bakeries}}
          <tr>
            <td>{{name}}</td>
            <td>{{profit_margin}}</td>
          </tr>
        {{/each}}
      </tbody>

  </table>


{{/inline}}
{{> layouts/main}}
